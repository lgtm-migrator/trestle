{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "strict": true,
//    "noImplicitAny": true,
//    "noImplicitThis": true,
//    "noImplicitReturns": true,
    "lib": [
      "es6",
      "dom"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "src/test/e2e",
    "node_modules",
    "dist",
    "**/*.ngfactory.ts",
    "**/*.shim.ts",
    "target"
  ],
  "compileOnSave": true,
  "buildOnSave": false,
  "angularCompilerOptions": {
    "genDir": "./compiled",
    "skipMetadataEmit": true
  }
}
