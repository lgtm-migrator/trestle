                    </properties>
                    <parallel>classes</parallel>
                    <reuseForks>false</reuseForks>
                    <useUnlimitedThreads>true</useUnlimitedThreads>
                    <forkCount>3</forkCount>
                </configuration>
            </plugin>
            <plugin>
